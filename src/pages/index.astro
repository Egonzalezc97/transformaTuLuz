---
import { Image } from 'astro:assets';
import fondoBuda from '../assets/fondo_buda_fondooscuro.webp';
import amorImg from '../assets/amor_dark.webp';
import dineroImg from '../assets/dinero_dark.webp';
import propositoImg from '../assets/proposito_dark.webp';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Transforma tu Luz</title>
  </head>
  <body
    class="relative min-h-screen bg-cover bg-center text-white"
    style={`background-image: url(${fondoBuda.src})`}
  >
    <!-- Gradiente superpuesto -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 to-black/80 z-0"></div>

    <!-- Contenido principal -->
    <main class="relative z-10 flex flex-col items-center justify-center px-4 py-20 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Transforma tu Luz</h1>
      <p class="mb-12 text-lg max-w-2xl">Descubre el camino hacia el amor, la abundancia y tu propósito de vida.</p>

      <!-- Tarjetas -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl w-full">
        <!-- Amor -->
        <a href="/amor" class="group relative rounded-2xl overflow-hidden transition-transform hover:scale-105 opacity-90 hover:opacity-100">
          <Image src={amorImg} alt="Sanar el Amor" class="w-full h-64 object-cover rounded-2xl" />
          <div class="absolute bottom-0 bg-black bg-opacity-60 w-full p-4 text-white text-center">
            <h2 class="text-xl font-semibold">Sanar el Amor</h2>
          </div>
        </a>

        <!-- Dinero -->
        <a href="/dinero" class="group relative rounded-2xl overflow-hidden transition-transform hover:scale-105 opacity-90 hover:opacity-100">
          <Image src={dineroImg} alt="Atraer Abundancia" class="w-full h-64 object-cover rounded-2xl" />
          <div class="absolute bottom-0 bg-black bg-opacity-60 w-full p-4 text-white text-center">
            <h2 class="text-xl font-semibold">Atraer Abundancia</h2>
          </div>
        </a>

        <!-- Propósito -->
        <a href="/proposito" class="group relative rounded-2xl overflow-hidden transition-transform hover:scale-105 opacity-90 hover:opacity-100">
          <Image src={propositoImg} alt="Descubrir mi Propósito" class="w-full h-64 object-cover rounded-2xl" />
          <div class="absolute bottom-0 bg-black bg-opacity-60 w-full p-4 text-white text-center">
            <h2 class="text-xl font-semibold">Descubrir mi Propósito</h2>
          </div>
        </a>
      </div>

      <!-- Botón Quiero más información -->
      <a
        href="https://wa.me/56949787103"
        target="_blank"
        class="mt-12 inline-block bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-full shadow-lg transition-transform hover:scale-105"
      >
        Quiero más información 💬
      </a>
    </main>

    <!-- Footer -->
    <footer class="relative z-10 mt-20 text-center text-gray-300 py-6">
      <p>© 2025 Transforma tu Luz. Todos los derechos reservados.</p>
      <p>Karim y Rafaela.</p>
    </footer>

    <!-- Botón flotante de WhatsApp -->
    <a
      href="https://wa.me/56949787103"
      target="_blank"
      class="fixed bottom-4 right-4 z-50 bg-green-500 hover:bg-green-600 text-white p-4 rounded-full shadow-lg transition-transform hover:scale-110"
      aria-label="Contáctanos por WhatsApp"
    >
      💬
    </a>
  </body>
</html>

